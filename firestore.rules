rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de productos
    match /products/{document=**} {
      // Cualquiera puede leer (ver el catálogo)
      allow read: if true;
      
      // Solo Nicky y admin pueden escribir
      allow write: if request.auth != null && 
                   (request.auth.token.email == 'dulzuras.nickynicole@gmail.com' || 
                    request.auth.token.email == 'byhijar@gmail.com');
    }

    // Reglas para pedidos
    match /pedidos/{document=**} {
      // Cualquiera autenticado puede crear un pedido (su propio pedido)
      // Ojo: Si quieres permitir pedidos de invitados, debes quitar 'request.auth != null'
      // pero para el historial se necesita auth.
      allow create: if true; 

      // Solo el dueño del pedido (o el admin) puede leerlo
      allow read: if request.auth != null && 
                  (request.auth.uid == resource.data.userId || 
                   request.auth.token.email == 'dulzuras.nickynicole@gmail.com' || 
                   request.auth.token.email == 'byhijar@gmail.com');
    }
  }
}
