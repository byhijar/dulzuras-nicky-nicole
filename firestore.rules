rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si es admin
    function isAdmin() {
      // Agregado el correo de Nicky y el tuyo
      return request.auth.token.email in ['dulzuras.nickynicole@gmail.com', 'byhijar@gmail.com'];
    }

    // Regla para usuarios: Cada uno puede leer y escribir SOLO su propia info
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para productos (clientes leen, admins escriben)
    match /products/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }

    // Regla para pedidos
    match /pedidos/{pedidoId} {
      allow create: if request.auth != null; // Cualquiera logueado compra
      
      // Lee si es dueño del pedido O si es admin
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      
      // Solo admin cambia estados
      allow update: if request.auth != null && isAdmin();
    }
  }
}
